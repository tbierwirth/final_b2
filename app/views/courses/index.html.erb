<% @courses.each do |course| %>
  <section id="course-<%= course.id %>">
    <% students  = course.sorted_by_grade %>
    <h1><%= course.name %></h1>
    <ul>
      <% students.each do |student| %>
        <li>Name: <%= student.name %></li>
        <li>Grade: <%= student.grade %></li>
      <% end %>
    </ul>
  </section>
<% end %>
